<div class="modal fade" tabindex="-1" id="{{id}}" role="dialog" aria-labelledby="{{id}}" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">{{title}}</h5>
                {{#if showCloseBtn}}
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{/if}}
            </div>
            <div class="modal-body">
                {{bodyText}}
            </div>
            <div class="modal-footer">
                {{#if onlyPrimaryBtnRequired}}
                <button type="button" class="btn btn-primary">{{primaryBtnText}}</button>
                {{else}}
                <button type="button" class="btn btn-secondary" id="btnSecondary">{{secondaryBtnText}}</button>
                <button type="button" class="btn btn-primary" id="btnPrimary">{{primaryBtnText}}</button>
                {{/if}}
            </div>
        </div>
    </div>
</div>